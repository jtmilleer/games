<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="WarController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #2d5016;">

    <!-- Top Section - Hand Counts -->
    <top>
        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #1a1a1a;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="WAR CARD GAME" style="-fx-text-fill: #ffd700;">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>

            <HBox alignment="CENTER" spacing="80">
                <!-- Player 1 Hand -->
                <VBox alignment="CENTER" spacing="8">
                    <Label text="Player 1" style="-fx-text-fill: #4a90e2;">
                        <font>
                            <Font name="System Bold" size="16"/>
                        </font>
                    </Label>
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Cards:" style="-fx-text-fill: white;">
                            <font>
                                <Font size="14"/>
                            </font>
                        </Label>
                        <Label fx:id="player1HandLabel" text="0"
                               style="-fx-text-fill: #4a90e2; -fx-font-weight: bold;">
                            <font>
                                <Font size="18"/>
                            </font>
                        </Label>
                    </HBox>
                </VBox>

                <!-- VS Label -->
                <Label text="VS" style="-fx-text-fill: #ffd700;">
                    <font>
                        <Font name="System Bold" size="20"/>
                    </font>
                </Label>

                <!-- Player 2 Hand -->
                <VBox alignment="CENTER" spacing="8">
                    <Label text="Player 2" style="-fx-text-fill: #e74c3c;">
                        <font>
                            <Font name="System Bold" size="16"/>
                        </font>
                    </Label>
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Cards:" style="-fx-text-fill: white;">
                            <font>
                                <Font size="14"/>
                            </font>
                        </Label>
                        <Label fx:id="player2HandLabel" text="0"
                               style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;">
                            <font>
                                <Font size="18"/>
                            </font>
                        </Label>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Center Section - Playing Area -->
    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Cards Display Area -->
            <HBox alignment="CENTER" spacing="100">
                <!-- Player 1 Card Area -->
                <VBox alignment="CENTER" spacing="15">
                    <Label text="Player 1" style="-fx-text-fill: #4a90e2;">
                        <font>
                            <Font name="System Bold" size="14"/>
                        </font>
                    </Label>

                    <!-- Face-down cards for war -->
                    <HBox fx:id="faceDownBox1" alignment="CENTER" spacing="5"
                          minHeight="120" prefHeight="120"/>

                    <!-- Current played card -->
                    <StackPane style="-fx-background-color: rgba(255,255,255,0.1);
                                      -fx-background-radius: 10;
                                      -fx-border-color: #4a90e2;
                                      -fx-border-radius: 10;
                                      -fx-border-width: 2;">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <ImageView fx:id="player1CardView"
                                   fitHeight="180" fitWidth="130"
                                   preserveRatio="true"/>
                    </StackPane>
                </VBox>

                <!-- Player 2 Card Area -->
                <VBox alignment="CENTER" spacing="15">
                    <Label text="Player 2" style="-fx-text-fill: #e74c3c;">
                        <font>
                            <Font name="System Bold" size="14"/>
                        </font>
                    </Label>

                    <!-- Face-down cards for war -->
                    <HBox fx:id="faceDownBox2" alignment="CENTER" spacing="5"
                          minHeight="120" prefHeight="120"/>

                    <!-- Current played card -->
                    <StackPane style="-fx-background-color: rgba(255,255,255,0.1);
                                      -fx-background-radius: 10;
                                      -fx-border-color: #e74c3c;
                                      -fx-border-radius: 10;
                                      -fx-border-width: 2;">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <ImageView fx:id="player2CardView"
                                   fitHeight="180" fitWidth="130"
                                   preserveRatio="true"/>
                    </StackPane>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- Bottom Section - Status and Controls -->
    <bottom>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #1a1a1a;">
            <padding>
                <Insets top="20" right="20" bottom="25" left="20"/>
            </padding>

            <!-- Status Message -->
            <Label fx:id="statusLabel" text="Click 'Play Round' to start!"
                   style="-fx-text-fill: white; -fx-background-color: rgba(255,255,255,0.1);
                          -fx-background-radius: 8; -fx-padding: 12;">
                <font>
                    <Font size="16"/>
                </font>
            </Label>

            <!-- Play Button -->
            <Button fx:id="playButton" text="Play Round"
                    prefWidth="200" prefHeight="50"
                    style="-fx-background-color: #27ae60;
                           -fx-text-fill: white;
                           -fx-font-size: 18;
                           -fx-font-weight: bold;
                           -fx-background-radius: 25;
                           -fx-cursor: hand;">
            </Button>
        </VBox>
    </bottom>
</BorderPane>